  {{#link-to 'signup'}}
    <button class="btn btn-link more">Sign up</button>
  {{/link-to}}
  
  <div class="text-center">
    <form class="form-signin" {{action 'authenticate' on='submit'}}>
      
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control" onchange={{action 'updateEmail'}}   value={{this.email}} placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" onchange={{action 'updatePassword'}}   value={{this.password}} placeholder="Password" required>
      
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      
    </form>
  </div>
  {{#if errorMessage}}
  <div class="alert alert-danger" data-test-error-message>
    <p>
      <strong>Sign in failed</strong><br> <code>{{errorMessage}}</code>
    </p>
   
  </div>
{{/if}}