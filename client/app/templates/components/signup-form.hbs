{{#link-to 'login'}}
    <button class="btn btn-link more">Back to login</button>
  {{/link-to}}
  
  <div class="text-center">
    <form class="form-signin" {{action 'checkEnterdPassword' on='submit'}}>
      
      <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control"  onchange={{action 'addEmail'}}   value={{this.email}} placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only">Enter Password</label>
      <input type="password" id="inputPassword" class="form-control first" onchange={{action 'addPassword'}}   value={{this.addpassword}} placeholder="Enter password" required>
      <label for="reinputPassword" class="sr-only">Re-enter Password</label>
      <input type="password" id="reinputPassword" class="form-control"  onchange={{action 'rePassword'}}   value={{this.repassword}} placeholder="Re-enter password" required>
      
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      
    </form>
  </div>
  {{#if errorMessage}}
  <div class="alert alert-danger" >
    <p>
      <strong>Sign up failed</strong><br> <code>{{errorMessage}}</code>
    </p>
   
  </div>
{{/if}}
{{#if success}}
  <div class="alert alert-success" >
    <p>
      <strong>Sign up success!</strong><br>
    </p>
   
  </div>
{{/if}}